{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "utils/*": ["./src/utils/*"],
      "ducks/*": ["./src/ducks/*"],
      "epics/*": ["./src/epics/*"],
      "pages/*": ["./src/pages/*"],
      "store/*": ["./src/store/*"],
      "routes/*": ["./src/routes.js"],
      "services/*": ["./src/services/*"],
      "components/*": ["./src/components/*"]
    }
  },
  "exclude": ["node_modules", "dist", "public"]
}
